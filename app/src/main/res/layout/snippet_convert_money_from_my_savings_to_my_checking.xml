<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rectangle_white_transparent_inside_border_black"
    android:padding="10sp"
    android:layout_marginTop="10sp"
    tools:showIn="@layout/activity_checking_account_dashboard">
    <TextView
        android:id="@+id/convert_money_from_my_savings_to_my_checking"
        android:text="Convert money to my Checking"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:tooltipText="add_money_account_dashboard"/>
    <EditText
        android:id="@+id/input_money_to_convert_to_savings"
        android:hint="Money..."
        android:textColorHint="#0222D5"
        android:layout_marginTop="10sp"
        android:background="@drawable/rectangle_white_transparent_inside_border_black"
        android:inputType="numberDecimal"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#0222D5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convert_money_from_my_savings_to_my_checking"/>
    <Button
        android:id="@+id/bt_confirm_convert_to_my_checking"
        android:text="Confirm convert to my Checking"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_white_inside_border_black"
        app:layout_constraintTop_toBottomOf="@id/input_money_to_convert_to_savings"/>
</android.support.constraint.ConstraintLayout>