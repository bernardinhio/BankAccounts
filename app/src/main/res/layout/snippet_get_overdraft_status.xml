<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rectangle_white_transparent_inside_border_black"
    android:padding="10sp"
    android:layout_marginTop="10sp"
    tools:showIn="@layout/activity_checking_account_dashboard">
    <TextView
        android:id="@+id/get_overdraft_status"
        android:text="Overdraft limit status"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:tooltipText="get_balance"/>
    <TextView
        android:id="@+id/overdraft_status"
        android:text="..."
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#0222D5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/get_overdraft_status"
        android:tooltipText="Your remaining overdraft is 1000€, limit is: 1500€"/>
</android.support.constraint.ConstraintLayout>